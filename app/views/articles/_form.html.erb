<%= form_for(@article) do |f| %>
  <%= f.label :user_id, "作者" %>
  <%= f.text_field :user_id, class:'form-control', value:"1" %>
  <%= f.label :title, "標題" %>
  <%= f.text_field :title, class:'form-control' %>
  <%= f.label :content, "內容" %>
  <%= f.cktext_area :content, :ckeditor => {:toolbar => 'sim'}  %>
  <br>
  <%= f.submit '送出', class:'btn btn-primary' %> 
<% end %>
